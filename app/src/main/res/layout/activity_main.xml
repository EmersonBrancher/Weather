<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background02"
    android:visibility="visible">

    <TextView
        android:id="@+id/textoCidadeId"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="181dp"
        android:text="Cidade"
        android:textColor="@android:color/background_light"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/iconClimaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textoCidadeId"
        android:layout_alignStart="@+id/textoCidadeId"
        android:layout_below="@+id/textoCidadeId"
        android:src="@drawable/i01d" />

    <TextView
        android:id="@+id/textoTempId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textoCidadeId"
        android:layout_toEndOf="@+id/iconClimaId"
        android:layout_toRightOf="@+id/iconClimaId"
        android:textColor="@android:color/background_light"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textoTempId"
        android:layout_toEndOf="@+id/textoTempId"
        android:layout_toRightOf="@+id/textoTempId"
        android:text="ÂºC"
        android:textColor="@android:color/background_light"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/ic_search_category_default" />

    <EditText
        android:id="@+id/buscaCidadeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/botaoConsultaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:text="Consultar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView8"
        android:layout_toRightOf="@+id/imageView8"
        android:text="Cidade:"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

</RelativeLayout>
